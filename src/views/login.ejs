<%- include('includes/head') %>
<%- include('includes/nav') %>

  <div class="container">
    <div class="row">
      <div class="col-lg-2"></div>

      <div class="col-lg-8 my-3">
        <h1 class="text-center">Create account or to enter</h1>
        <p class="text-center lead my-3">Log in or create your account below</p>

        <%- include('includes/messages'); %>

        <div class="row">
            <div class="col-lg ml-3">
                <h4>Sign up</h4>
                <p>If you don't have an account yet, fill out the form below:</p>

                <form action="/login/register" method="POST">
                  <input type="hidden" name="_csrf" value=<%= csrfToken %>>
                    <div class="form-group">
                      <label>Email address</label>
                      <input type="email" class="form-control" name="email">
                    </div>
                    <div class="form-group">
                      <label>Password</label>
                      <input type="password" class="form-control" name="password">
                    </div><br/>
                    <button type="submit" class="btn btn-primary">Submit</button>
                  </form>
            </div>

            <div class="col-lg">
                <h4>Sign in</h4>
                <p>If you already have an account, login below:</p><br>

                <form action="/login/login" method="POST">
                  <input type="hidden" name="_csrf" value=<%= csrfToken %>>
                    <div class="form-group">
                      <label>Email address</label>
                      <input type="email" class="form-control" name="email">
                    </div>
                    <div class="form-group">
                      <label>Password</label>
                      <input type="password" class="form-control" name="password">
                    </div><br/>
                    <button type="submit" class="btn btn-primary">To enter</button>
                  </form>

            </div>
            
        </div>
      </div>
      

      <div class="col-lg-2"></div>
    </div>
  </div>

<%- include('includes/footer') %>